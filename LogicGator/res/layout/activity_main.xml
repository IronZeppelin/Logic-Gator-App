<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="top"
    android:orientation="vertical"
    tools:context=".activity_main">	

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_marginBottom="20dp"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp"
	    android:layout_marginTop="15dp"
	    android:background="#FFE0A3"
	    android:gravity="center_horizontal"
	    android:orientation="vertical" >
			   
			    <TextView
			        android:id="@+id/header_txt"
			        android:layout_width="match_parent"
	 	    		android:layout_height="wrap_content"
	        		android:layout_weight="1"
	        		android:layout_marginLeft="30dp"
	        		android:layout_marginRight="30dp"
	        		android:layout_marginBottom="20dp"
	        		android:layout_marginTop="15dp"
			        android:text="@string/header_text_txt"
			        android:textSize="25dp"
			        android:textColor="#000000" />
			
			    <ImageButton
			        android:id="@+id/buff_bt"
			        android:layout_width="match_parent"
	 	    		android:layout_height="wrap_content"
	        		android:layout_weight="1"
	        		android:layout_marginLeft="30dp"
	        		android:layout_marginRight="30dp"
	        		android:layout_marginBottom="5dp"
			        android:background="#000000"
			        android:src="@drawable/buff_gate" />
			
			    <ImageButton
			        android:id="@+id/not_bt"
			        android:layout_width="match_parent"
	 	    		android:layout_height="wrap_content"
	        		android:layout_weight="1"
	        		android:layout_marginLeft="30dp"
	        		android:layout_marginRight="30dp"
	        		android:layout_marginBottom="5dp"
			        android:background="#000000"
			        android:src="@drawable/not_gate" />
			
			    <ImageButton
			        android:id="@+id/and_bt"
			        android:layout_width="match_parent"
	 	    		android:layout_height="wrap_content"
	        		android:layout_weight="1"
	        		android:layout_marginLeft="30dp"
	        		android:layout_marginRight="30dp"
	        		android:layout_marginBottom="5dp"
			        android:background="#000000"
			        android:src="@drawable/and_gate" />
			
			    <ImageButton
			        android:id="@+id/nand_bt"
			        android:layout_width="match_parent"
	 	    		android:layout_height="wrap_content"
	        		android:layout_weight="1"
	        		android:layout_marginLeft="30dp"
	        		android:layout_marginRight="30dp"
	        		android:layout_marginBottom="5dp"
			        android:background="#000000"
			        android:src="@drawable/nand_gate" />
			
			    <ImageButton
			        android:id="@+id/or_bt"
			        android:layout_width="match_parent"
	 	    		android:layout_height="wrap_content"
	        		android:layout_weight="1"
	        		android:layout_marginLeft="30dp"
	        		android:layout_marginRight="30dp"
	        		android:layout_marginBottom="5dp"
			        android:background="#000000"
			        android:src="@drawable/or_gate" />
			
			    <ImageButton
			        android:id="@+id/nor_bt"
			        android:layout_width="match_parent"
	 	    		android:layout_height="wrap_content"
	        		android:layout_weight="1"
	        		android:layout_marginLeft="30dp"
	        		android:layout_marginRight="30dp"
	        		android:layout_marginBottom="5dp"
			        android:background="#000000"
			        android:src="@drawable/nor_gate" />
			
			    <ImageButton
			        android:id="@+id/xor_bt"
			        android:layout_width="match_parent"
	 	    		android:layout_height="wrap_content"
	        		android:layout_weight="1"
	        		android:layout_marginLeft="30dp"
	        		android:layout_marginRight="30dp"
	        		android:layout_marginBottom="5dp"
			        android:background="#000000"
			        android:src="@drawable/xor_gate" />
			
			    <ImageButton
			        android:id="@+id/xnor_bt"
			        android:layout_width="match_parent"
	 	    		android:layout_height="wrap_content"
	        		android:layout_weight="1"
	        		android:layout_marginLeft="30dp"
	        		android:layout_marginRight="30dp"
	        		android:layout_marginBottom="30sp"
			        android:background="#000000"
			        android:src="@drawable/xnor_gate" />
			    <TextView
        			android:id="@+id/copyright_main"
        			android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:layout_weight="1"
        			android:textColor="#FFFFFF"
        			android:text="@string/copyright"
        			android:layout_marginBottom="30sp" />

		</LinearLayout>
</ScrollView>	
		
